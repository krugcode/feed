package main

import "feed/components/button"

templ HomePage() {
	@Layout("The Feed") {
		@HomePageContent()
	}
}

templ HomePageContent() {
	<div class="max-w-2xl mx-auto">
		<div class="bg-card rounded-lg shadow-sm border border-border p-6">
			<h2 class="text-xl font-semibold text-card-foreground mb-4">Getting Started</h2>
			<p class="text-muted-foreground mb-4">
				Your blog is now running with templUI components!
			</p>
			@button.Button() {
				Get Started
			}
		</div>
	</div>
}
